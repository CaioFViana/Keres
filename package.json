{
  "name": "keres-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    
    "start:api": "bun --cwd apps/api dev",
    "start:client": "bun --cwd apps/client start",
    "start:desktop": "bun --cwd apps/desktop dev",
    "craft": "barrel-craft",
    "type-check": "tsc --noEmit",
    "db:generate": "cd apps/api && drizzle-kit generate:pg",
    "db:migrate": "bun run --cwd apps/api/src/infrastructure/db migrate.ts",
    "db:seed": "bun run --cwd apps/api/src/infrastructure/db src/infrastructure/db/seed.ts"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  },
  "packageManager": "bun@1.2.19",
  "dependencies": {
    "@expo/metro-runtime": "~3.1.3"
  }
}