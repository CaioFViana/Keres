{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": false,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    // Path aliases for Clean Architecture layers
    "paths": {
      "@keres/shared": ["../../packages/shared/dist"],
      "@domain/*": ["../../packages/shared/dist/domain/*"],
      "@application/*": ["../../packages/shared/dist/application/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@presentation/*": ["./src/presentation/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
