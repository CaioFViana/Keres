{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "outDir": "./dist", // Added
    "declaration": true, // Added, to generate .d.ts files
    "noEmit": false // Changed to false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
